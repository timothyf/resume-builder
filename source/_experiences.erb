<section class="section experiences-section">
    <h2 class="section-title"><i class="fa fa-briefcase"></i><%= data.resume.headers.jobs %></h2>

    <% data.resume.jobs.each do |job| %>
    <div class="item">
        <div class="meta">
            <div class="company">
                <% if job.url? %>
                  <h2 class="location"><a href="<%= job.url%>" target=_blank><%= job.company %></a></h2>
                <% else %>
                  <h2 class="location"><%= job.company %></h2>
                <% end %>
            </div>
            <div class="company-location">
              <%= job.location.city %>, <%= job.location.state %>
              <% if !job.title %>
                <div class="time">
                    <span class="dtstart" title="<%= job.dates.start %>"><%= display_date(job.dates.start) %></span> -
                    <span class="dtend" title="<%= job.dates.end %>"><%= display_date(job.dates.end) %></span>
                </div>
              <% end %>
            </div>
            <% if job.title %>
              <div class="job-title-row">
                  <h3 class="job-title"><%= job.title %></h3>
                  <% if job.dates %>
                    <div class="time">
                        <span class="dtstart" title="<%= job.dates.start %>"><%= display_date(job.dates.start) %></span> -
                        <span class="dtend" title="<%= job.dates.end %>"><%= display_date(job.dates.end) %></span>
                    </div>
                  <% end %>
              </div>
            <% end %>
        </div>
        <div class="details">
            <p><%= Maruku.new(job.desc).to_html %></p>
        </div>
    </div>
    <% end %>
</section>
