<div class="contact-container container-block">
    <ul class="list-unstyled contact-list">
        <li class="address">
          <%= @resume_data.contact_info.address.street %><br/>
          <%= @resume_data.contact_info.address.city %>,
          <%= @resume_data.contact_info.address.state %>&nbsp;&nbsp;
          <%= @resume_data.contact_info.address.postal_code %>
        </li>
        <li class="email"><i class="fa fa-envelope"></i><a href="mailto:<%= @resume_data.contact_info.email %>"><%= @resume_data.contact_info.email %></a></li>
        <% if @resume_data.contact_info.phone %>
            <li class="phone"><i class="fa fa-phone"></i><a href="tel:<%= @resume_data.contact_info.phone %>"><%= @resume_data.contact_info.phone %></a></li>
        <% end %>
        <% if @resume_data.contact_info.homepage? || @resume_data.links? %>
          <hr/>
        <% end %>
        <% if @resume_data.contact_info.homepage? %>
            <li class="website"><i class="fa fa-globe"></i><a href="<%= @resume_data.contact_info.homepage %>" target="_blank"><%= @resume_data.contact_info.homepage %></a></li>
        <% end %>
        <% if @resume_data.links? %>
            <% @resume_data.links.each do |link| %>
                <li><i class="fa fa-link"></i><a href="<%= link.url %>" target="_blank"><%= link.name %></a></li>
            <% end %>
        <% end %>
        <hr/>
    </ul>
</div>
